{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo: build",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--",
                "--command",
                "(sleep 3; cat)",
                "--case-dir",
                "cases",
                // "--show-input"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
