    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo: build",
            "type": "shell",
            "command": "cargo",
            "args": ["build"],
            "group": {
                "kind": "build",
                "isDefault": true,
            },
        },
        {
            "label": "test 1",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--",
                "--command",
                "(sleep 3; cat)",
                "--case-dir",
                "cases",
                "--show-input",
                "--input-ext",
                "din",
                "--output-ext",
                "ans",
            ],
            "group": {
                "kind": "test",
                "isDefault": false,
            },
        },
        {
            "label": "test 2",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--",
                "--command",
                "(sleep 3; cat)",
                "--case-dir",
                "cases",
            ],
            "group": {
                "kind": "test",
                "isDefault": false,
            },
        },
        {
            "label": "test all",
            "type": "shell",
            "dependsOn": ["test 1", "test 2"],
            "dependsOrder": "sequence",
            "group": {
                "kind": "test",
                "isDefault": true,
            },
        },
    ],
}
